<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--    TODO: re-add action bar and style it-->
<!--    TODO: add corner radius to buttons-->
<!--    TODO: on pages with spinners, the spinners selfishly take all the styling for themselves. fix this issue and re-implement theme selection-->

    <style name="CafeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/coffeeDarkest</item>
        <item name="android:navigationBarColor">@color/coffeeMedium</item>
        <item name="colorPrimary">@color/coffeeMedium</item>
        <item name="colorAccent">@color/coffeeMedium</item>
        <item name="android:background">@color/coffeeLightest</item>
        <item name="android:color">@color/coffeeLightest</item>
        <item name="android:textColor">@color/coffeeDarkest</item>
        <item name="android:buttonStyle">@style/CafeButton</item>
        <!--        <item name="android:spinnerItemStyle">@style/CafeSpinnerItems</item>-->
    </style>
        <style name="CafeSpinnerItems" parent="android:Widget.Material.Light.Spinner">
            <item name="android:background">@color/coffeeDarkest</item>
            <item name="android:textColor">@color/coffeeLightest</item>
        </style>
        <style name="CafeButton" parent="android:Widget.Material.Light.Button">
            <item name="android:background">@color/coffeeDarkest</item>
            <item name="android:textColor">@color/coffeeLightest</item>
        </style>


    <style name="CityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/cityDarkGray</item>
        <item name="colorAccent">@color/cityDarkGreen</item>
        <item name="colorPrimary">@color/cityMediumGray</item>
        <item name="android:statusBarColor">@color/cityDarkGray</item>
        <item name="android:navigationBarColor">@color/cityDarkGray</item>
        <item name="android:background">@color/cityLightGray</item>
        <item name="android:textColor">@color/cityDarkGray</item>
        <item name="android:buttonStyle">@style/CityButton</item>
    </style>
    <style name="CityButton" parent="android:Widget.Material.Light.Button">
        <item name="android:background">@color/cityDarkGreen</item>
        <item name="android:textColor">@color/cityLightGray</item>
    </style>


    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimaryDark">@color/nightBlack</item>
        <item name="colorAccent">@color/nightWhite</item>
        <item name="colorPrimary">@color/nightDarkGray</item>
        <item name="android:textColor">@color/nightWhite</item>
        <item name="android:editTextColor">@color/nightWhite</item>
        <item name="android:statusBarColor">@color/nightBlue</item>
        <item name="android:navigationBarColor">@color/nightBlue</item>
        <item name="android:background">@color/nightDarkGray</item>
        <item name="android:editTextStyle">@style/NightEditText</item>
        <item name="android:buttonStyle">@style/NightButton</item>
        <item name="radioButtonStyle">@style/NightRadioButton</item>

    </style>
    <style name="NightButton" parent="android:Widget.Material.Light.Button">
        <item name="android:background">@color/nightLightGray</item>
        <item name="android:textColor">@color/nightBlack</item>
    </style>
    <style name="NightRadioButton" parent="android:Widget.Material.Light.CompoundButton.RadioButton">
        <item name="android:textColor">@color/nightWhite</item>
        <item name="android:buttonTint">#FFFFA7</item>
    </style>
    <style name="NightEditText" parent="android:Widget.Material.Light.EditText">
<!--        still can't seem to target the actual text in the edittext-->
        <item name="android:editTextColor">@color/nightWhite</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>

    </style>

</resources>
